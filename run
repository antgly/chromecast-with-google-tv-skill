#!/usr/bin/env bash
set -euo pipefail

if ! command -v uv >/dev/null 2>&1; then
  echo "uv is required. Please install uv and ensure it is on PATH."
  exit 127
fi
if ! command -v adb >/dev/null 2>&1; then
  echo "adb is required. Please install Android platform-tools and ensure adb is on PATH."
  exit 127
fi

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
exec uv run "${SCRIPT_DIR}/google_tv_skill.py" "$@"
